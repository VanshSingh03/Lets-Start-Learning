// Find sum of first n natural numbers .

#include <iostream>
using namespace std;

int minNum(int n);

int main()
{
    int n;
    cout<<"Enter a Number : ";
    cin>>n;
    
    cout<<"Sum : "<<minNum(n);
    return 0;
}

int minNum(int n){
     int count=0;
     for(int i=1;i<=n;i++){
          count += i;
     }
     return count ;
}